public class Test2b {
    public static void main(String[] args) {
        int size = 8;
        generateShape(size);
    }

    public static void generateShape(int size) {
        for (int i = 0; i < size; i++) {
            for (int j = 0; j <= i; j++) {
                if (j % 2 == 0) {
                    System.out.print("0");
                } else {
                    System.out.print("1");
                }
            }
            System.out.println();
        }
    }
}
